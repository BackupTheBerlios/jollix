#alle Module laden!
for module in $(pcimodules) ; do
       modprobe -s -k "$module"
done

#nVidia GK vorhanden?
for module in $(lsmod) ; do
  if [ "$module" = "nvidia" ] ; then
   echo "oh, eine nVidia GK!"  
#agpgart entfernen! 
   for rmmodule in /lib/modules/*/kernel/drivers/char/agp/* ; do
     rmmod -f $rmmodule
   done
   rmmod -f agpgart
  fi 
done

#agpgart.ko amd-k7-agp.ko sis-agp.ko via-agp.ko
