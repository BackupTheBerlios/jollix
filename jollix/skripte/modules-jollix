#alle Module laden
for module in $(pcimodules) ; do
       modprobe -s -k "$module"
done

#nVidia GK vorhanden, dann agpgart entfernen
for module in $(lsmod) ; do
  if [ "$module" = "NVdriver" ] ; then
   rmmod agpgart
  fi 
done

for module in $(lsmod) ; do
  if [ "$module" = "snd" ] ; then
   modprobe snd-pcm-oss
  fi
done

#Alsa unmuten
amixer set Master 100 unmute
amixer set PCM 100 unmute
